@using System.Runtime.InteropServices
@model FireDraft.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>
<div class="panel panel-default">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "no-margin",data_validate="parsley"}))
    {
        @Html.AntiForgeryToken()
        <div class="panel-heading">Register</div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm parsley-validated", required = "true" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm parsley-validated", id="password", required = "true" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm parsley-validated", data_equalto="#password", required = "true" })
        </div>
        <div class="panel-footer text-right">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
            
    </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
